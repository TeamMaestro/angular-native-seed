{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "app/*": [
                "app/app/*"
            ],
            "~/app/*": [
                "app/app/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es6",
            "es2015.iterable"
        ],
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules"
        ],
        "types": [
            "jasmine"
        ]
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.aot.ts",
        "hooks",
        "src"
    ]
}